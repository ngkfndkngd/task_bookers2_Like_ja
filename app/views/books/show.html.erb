<main>
  <p id="notice"></p>
    <div class="container px-5 px-sm-0">
      <div class="row">
        <div class="col-md-3">
          <%= render 'books/new', user: @user,book: @book_new %>
        </div>

          <div class="col-md-8 offset-md-1">
            <h2>Book detail</h2>
              <table class="table">
                <tbody>
                  <tr>
                    <td>
                      <%= link_to user_path(@book.user_id) do %>
                        <%= attachment_image_tag @book.user, :profile_image, size:"40x40", format:'jpeg', fallback:"no_image.jpg" %>
                      <br>
                        <%= @book.user.name %>
                      <% end %>
                    </td>
                    <td><%= @book.title %></td>
                    <td><%= @book.body %></td>
                    <td id="favorite_buttons_<%= @book.id %>">
                    <%= render 'favorites/favorite-btn', book: @book %>
                    </td>
                      <td>コメント数: <%= @book.book_comments.count %></td>
                    
                    <% if @book.user.id == current_user.id %>
                    <td><%= link_to 'Edit',edit_book_path(@book.id),class: "btn btn-sm btn-success" %></td>
                    <td><%= link_to 'Destroy',book_path, method: :delete,data: {confirm: "Are you sure?"}, class: "btn btn-sm btn-danger" %></td>
                    <% end %>
                  </tr>
                </tbody>
              </table>
              <%= render 'books/comment', book: @book,book_comment: @book_comment %>
          </div>
    </div>
</main>